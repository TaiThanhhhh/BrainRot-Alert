{
  "manifest_version": 3,
  "name": "Brain Rot Detector & Wellness Tracker",
  "version": "2.0.0",
  "description": "AI-powered brain rot detection with real-time analytics, parental controls, and wellness insights",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "alarms",
    "identity",
    "webNavigation",
    "history"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BrainGuard AI"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "content.css", "dashboard.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}